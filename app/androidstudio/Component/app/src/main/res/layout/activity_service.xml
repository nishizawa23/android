<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alpha.component.service.ServiceActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartServer"
        android:id="@+id/start_server_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopServer"
        android:id="@+id/stop_server_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onBind"
        android:id="@+id/on_bind"
        android:layout_below="@+id/start_server_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/start_server_button"
        android:layout_alignEnd="@+id/start_server_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onUnbind"
        android:id="@+id/un_bind"
        android:layout_below="@+id/stop_server_button"
        android:layout_alignRight="@+id/stop_server_button"
        android:layout_alignEnd="@+id/stop_server_button"
        android:layout_alignBottom="@+id/on_bind"
        android:layout_alignLeft="@+id/stop_server_button"
        android:layout_alignStart="@+id/stop_server_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IntentServerStart"
        android:id="@+id/button_intent_server_start"
        android:layout_below="@+id/on_bind"
        android:layout_alignRight="@+id/un_bind"
        android:layout_alignEnd="@+id/un_bind"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
